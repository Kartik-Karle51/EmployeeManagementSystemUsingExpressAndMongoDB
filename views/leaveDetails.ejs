<%- include("header.ejs")%>

<div class="container pt-5 edit">
    <div class="col-12">
        <h2>Leave Details</h2>
        <form class="row g-3">
            <div class="col-12">
                <label for="name" class="form-label">Employee Name</label>
                <input type="text" class="form-control p-2" id="name" name="name" value="<%= leave.names%>" readonly>
            </div>

            <div class="col-12">
                <label for="inputEmail4" class="form-label">Employee Email</label>
                <input type="email" class="form-control p-2" id="inputEmail4" name="email" value="<%= leave.email %>" readonly>
            </div>

            <div class="col-12">
                <label for="subject" class="form-label">Subject</label>
                <input type="text" class="form-control p-2" id="subject" name="subject" value="<%= leave.subject %>" readonly>
            </div>

            <div class="col-12">
                <h4>Message</h4>
                <p><%= leave.message %></p>
            </div>

            <div class="col-12 leave">
                <a href="/handleLeave/<%= leave._id %>/accept" class="btn btn-success text-white">Accept</a>
                <a href="/handleLeave/<%= leave._id %>/reject" class="btn btn-danger text-white">Reject</a>
            </div>
        </form>
    </div>
</div>
