<%- include("header.ejs")%>

<div class="container">
    <div class="col loginframe text-center pt-5">
        <marquee><h1>Welcome to Employee Management System</h1></marquee>
        
        <details id="loginDetails">
            <summary id="toggleButton" class="btn btn-success">Login</summary>
            <div class="mt-3">
                <a class="btn btn-primary text-white" href="/login">Employee Login</a>
                <a class="btn btn-primary text-white" href="/login-hr">HR Login</a>
            </div>
        </details>
    </div>
</div>
<script>
    const detailsElement = document.getElementById('loginDetails');
    const toggleButton = document.getElementById('toggleButton');

    detailsElement.addEventListener('toggle', () => {
        toggleButton.textContent= detailsElement.open ? 'Cancel' : 'Login';
        toggleButton.style.backgroundColor=detailsElement.open ? 'red' : 'green';
    });
</script>
</body>
</html>
